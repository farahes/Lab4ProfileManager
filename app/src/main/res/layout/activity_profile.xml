<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/newAvatarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a new Avatar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <!-- Spacer -->
    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/newAvatarTextView" />

    <!-- GridLayout -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:layout_centerHorizontal="true"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_00"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_01"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_02"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_03"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_04"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo_05"
            android:layout_row="1"
            android:layout_column="2" />
    </GridLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_below="@id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- Load From Phone Button -->
    <Button
        android:id="@+id/loadFromPhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD FROM PHONE"
        android:layout_below="@id/gridLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
